    .animated-link::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #3ea6f2;
      left: 0;
      bottom: -3px;
      transform: scaleX(0);
      transform-origin: right;
      transition: transform 0.3s ease;
    }
    .animated-link:hover,
    .animated-link:focus {
      color: #3ea6f2;
      outline: none;
    }
    .animated-link:hover::after,
    .animated-link:focus::after {
      transform: scaleX(1);
      transform-origin: left;
    }
    /* Scroll down fade-in animation */
    .fade-in-scroll {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }
    .fade-in-scroll.visible {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
  <script>
   // Scroll animation for elements with fade-in-scroll, fade-in-scroll-wfw, and fade-in-scroll-img classes
    function onScrollFadeIn() {
      const elements = document.querySelectorAll(
        ".fade-in-scroll, .fade-in-scroll-wfw, .fade-in-scroll-img, .work-item"
      );
      const windowHeight = window.innerHeight;
      elements.forEach((el) => {
        const rect = el.getBoundingClientRect();
        if (rect.top <= windowHeight - 100) {
          el.classList.add("visible");
        }
      });
    }
    window.addEventListener("scroll", onScrollFadeIn);
    window.addEventListener("load", onScrollFadeIn);

    // Filter buttons animation and active state toggle with box shadow animation for WEBFLOW button
    const buttons = document.querySelectorAll(".filter-btn");
    const works = document.querySelectorAll(".work-item");

    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        // Add animation class
        button.classList.add("btn-animate");
        // Remove animation class after animation ends
        button.addEventListener(
          "animationend",
          () => {
            button.classList.remove("btn-animate");
          },
          { once: true }
        );

        buttons.forEach((btn) => {
          btn.classList.remove(
            "bg-white",
            "text-[#3ea6f2]",
            "font-light",
            "webflow-active"
          );
          btn.classList.add("text-white", "font-semibold", "border-white");
        });

        button.classList.add("bg-white", "text-[#3ea6f2]", "font-light");
        button.classList.remove("text-white", "font-semibold");

        // Add box shadow animation only to WEBFLOW button when active
        if (button.getAttribute("data-filter") === "webflow") {
          button.classList.add("webflow-active");
        }

        const filter = button.getAttribute("data-filter");

        works.forEach((work) => {
          if (filter === "all") {
            work.classList.add("visible");
          } else {
            if (work.getAttribute("data-category") === filter) {
              work.classList.add("visible");
            } else {
              work.classList.remove("visible");
            }
          }
        });
      });
    });

    // Initialize to show all works on load
    window.addEventListener("load", () => {
      works.forEach((work) => work.classList.add("visible"));
      // Also add box shadow animation to WEBFLOW button if it is initially active
      buttons.forEach((btn) => {
        if (btn.getAttribute("data-filter") === "all") {
          // no box shadow on all by default
          btn.classList.remove("webflow-active");
        }
      });
    });

    // WHY CHOOSE ME Section Intersection Observer
    const animatedElements = document.querySelectorAll("[data-animate]");
    const observerOptions = {
      threshold: 0.1,
    };

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("animate-fadeInUpWhyChoose");
          entry.target.classList.remove("opacity-0");
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    animatedElements.forEach((el) => {
      observer.observe(el);
    });

    // Experience fade-up scroll animation
    function onScrollFade() {
      const elements = document.querySelectorAll(".fade-up");
      const windowBottom = window.innerHeight;

      elements.forEach((el) => {
        const rect = el.getBoundingClientRect();
        if (rect.top < windowBottom - 50) {
          el.classList.add("visible");
        }
      });
    }
    window.addEventListener("scroll", onScrollFade);
    window.addEventListener("load", onScrollFade);

    // Project form fade-slide-up scroll animation using IntersectionObserver
    document.addEventListener("DOMContentLoaded", () => {
      const animatedElements = document.querySelectorAll(".fade-slide-up");

      const observerForm = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
              observerForm.unobserve(entry.target);
            }
          });
        },
        {
          threshold: 0.1,
        }
      );

      animatedElements.forEach((el) => {
        observerForm.observe(el);
      });
    });

    // Intersection Observer for fade-in scroll animation in footer
    document.addEventListener("DOMContentLoaded", function () {
      const fadeElems = document.querySelectorAll(".fade-in-scroll");
      const observerFooter = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
              observerFooter.unobserve(entry.target);
            }
          });
        },
        {
          threshold: 0.1,
        }
      );
      fadeElems.forEach((el) => {
        observerFooter.observe(el);
      });
    });
    // Sidebar open/close handlers
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('overlay');
    const openBtn = document.getElementById('openSidebarBtn');
    const closeBtn = document.getElementById('closeSidebarBtn');

    function openSidebar() {
      sidebar.classList.add('open');
      overlay.classList.add('visible');
      overlay.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeSidebar() {
      sidebar.classList.remove('open');
      overlay.classList.remove('visible');
      overlay.classList.add('hidden');
      document.body.style.overflow = '';
    }

    openBtn.addEventListener('click', openSidebar);
    closeBtn.addEventListener('click', closeSidebar);
    overlay.addEventListener('click', closeSidebar);
  </script>
 </body>
</html>
